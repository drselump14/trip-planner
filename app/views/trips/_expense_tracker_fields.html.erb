<div class="nested-fields mt-2">
  <div class="row">
    <div class="col-md-2">
      <%= f.label :expense_date %>
      <%= f.date_field :date, class: "form-control" %>
    </div>
    <div class="col-md-3">
      <%= f.label :description %>
      <%= f.text_field :description, class: "form-control" %>
    </div>
    <div class="col-md-2">
      <%= f.label :amount %>
      <%= f.number_field :amount, class: "form-control" %>
    </div>
    <div class="col-md-2">
      <%= link_to_remove_association "Delete", f, :class => "btn btn-danger mt-4" %>
    </div>
  </div>
</div>
